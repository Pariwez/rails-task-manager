<h1> edit <%= @task.title %></h1>
<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <%= f.submit %>
<% end %>

<%= link_to "back", tasks_path%>
<%= link_to "delete", task_path(@task),
data: {turbo_method: :delete, turbo_confirm: "are you sure" }
%>
